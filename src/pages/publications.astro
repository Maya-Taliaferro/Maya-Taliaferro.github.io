---

<PublicationList title="Publications">
  {Object.entries(publications)
  .sort(([a], [b]) => {
    // Handle numeric years first, sort descending
    const isANumber = !isNaN(a);
    const isBNumber = !isNaN(b);

    if (isANumber && isBNumber) {
      return Number(b) - Number(a);
    }
    if (isANumber) return -1;
    if (isBNumber) return 1;
    return a.localeCompare(b);
  })
  .map(([year, entries]) => (
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">{year}</h2>
      <ul class="list-disc list-inside space-y-4">
        {entries.map(pub => (
          <li>
            <span class="font-medium">{pub.title}</span> —{" "}
            <span class="text-sm text-pblack">
              <span set:html={pub.authors}></span>
              {pub.venue && <> — <em>{pub.venue}</em></>}
            </span>
            {pub.doi && pub.doi !== "#" && (
              <a
                href={pub.doi}
                target="_blank"
                rel="noopener"
                class="text-pblue hover:underline text-sm ml-2"
              >
                Link
              </a>
            )}
          </li>
        ))}
      </ul>
    </section>
))}
